<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.nexm.ghatanjionline.adminFragments.AddFoodFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:padding="16dp"
        android:text="Item Details"
        android:textSize="16sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/add_food_editText_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="Name of item/service"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <EditText
                android:id="@+id/add_food_editText_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="price"
                android:inputType="text|textPersonName|numberDecimal"
                android:padding="10dp" />

            <EditText
                android:id="@+id/add_food_editText_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="short description of item"
                android:inputType="textMultiLine"
                android:padding="10dp" />

            <EditText
                android:id="@+id/add_food_editText_extra1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="short description of item"
                android:inputType="textMultiLine"
                android:padding="10dp" />

            <EditText
                android:id="@+id/add_food_editText_extra2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="short description of item"
                android:inputType="textMultiLine"
                android:padding="10dp" />

            <EditText
                android:id="@+id/add_food_editText_extra3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="short description of item"
                android:inputType="textMultiLine"
                android:padding="10dp" />

            <CheckBox
                android:id="@+id/add_food_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bill available" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/add_food_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="16dp"
        android:text="Submit" />
</FrameLayout>
