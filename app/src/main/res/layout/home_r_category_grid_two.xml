<?xml version="1.0" encoding="utf-8"?>

<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="10dp"
    android:overScrollMode="never"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:scrollIndicators="none"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/category_grid_image1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/food_r" />

            <TextView
                android:id="@+id/home_r_grid_one"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/category_grid_image2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/food_r" />

            <TextView
                android:id="@+id/home_r_grid_two"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/category_grid_image3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/food_r" />

            <TextView
                android:id="@+id/home_r_grid_three"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/category_grid_image4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/food_r" />

            <TextView
                android:id="@+id/home_r_grid_four"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/category_grid_image5"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/food_r" />

            <TextView
                android:id="@+id/home_r_grid_five"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/category_grid_image6"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/all_categories_r" />

            <TextView
                android:id="@+id/home_r_grid_six"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="अधिक ..." />
        </LinearLayout>

    </LinearLayout>
</HorizontalScrollView>
