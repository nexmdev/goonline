<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="10dp"
    android:background="@android:color/white"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:scrollbarThumbHorizontal="@null">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home_r_grid_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/old_shop_round"
            android:gravity="center_horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="TextView"
            android:textAppearance="@style/bold" />

        <TextView
            android:id="@+id/home_r_grid_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/transport_round"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="TextView"
            android:textAppearance="@style/bold" />

        <TextView
            android:id="@+id/home_r_grid_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/rental_round"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="TextView"
            android:textAppearance="@style/bold" />

        <TextView
            android:id="@+id/home_r_grid_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/food_round"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="TextView"
            android:textAppearance="@style/bold" />

        <TextView
            android:id="@+id/home_r_grid_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/services_round"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="TextView"
            android:textAppearance="@style/bold" />

        <TextView
            android:id="@+id/home_r_grid_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/all_categories"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="All Categories"
            android:textAppearance="@style/bold" />
    </LinearLayout>

</HorizontalScrollView>