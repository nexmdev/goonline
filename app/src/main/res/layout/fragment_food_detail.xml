<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nexm.ghatanjionline.fragments.FoodDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:nestedScrollingEnabled="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/orange"
            android:orientation="horizontal">

        </LinearLayout>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="2">

            <ImageView
                android:id="@+id/food_detail_imageview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@color/orange"
                android:padding="10dp"
                app:layout_columnSpan="2"
                app:srcCompat="@drawable/dosa" />

            <TextView
                android:id="@+id/food_detail_itemname_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Masala Dosa"
                android:textAppearance="@style/text_button"
                app:layout_columnWeight="1" />

            <TextView
                android:id="@+id/food_detail_ratings_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:drawablePadding="16dp"
                android:drawableRight="@drawable/ic_grade_white_24dp"
                android:gravity="right|center_vertical"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="4.1"
                android:textAppearance="@style/text_button"
                android:textColor="@android:color/white"
                app:layout_columnWeight="1" />

            <TextView
                android:id="@+id/food_detail_price_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="₹ 25 / प्लेट"
                android:textAppearance="@style/text_button"
                android:textColor="@color/orange"
                app:layout_columnSpan="2" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="#D7CCC8"
                app:layout_columnSpan="2" />

            <TextView
                android:id="@+id/food_detail_quantity_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="1"
                android:textAppearance="@style/text_button"
                app:layout_columnSpan="2" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="#D7CCC8"
                app:layout_columnSpan="2" />

            <TextView
                android:id="@+id/food_detail_minus_textview"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="?attr/selectableItemBackground"
                android:drawableRight="@drawable/ic_remove_circle_outline_black_24dp"
                android:paddingBottom="10dp"
                android:paddingRight="40dp"
                android:paddingTop="10dp"
                android:textAppearance="@style/text_button"
                app:layout_columnWeight="1" />

            <TextView
                android:id="@+id/food_detail_plus_textview"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="?attr/selectableItemBackground"
                android:drawableLeft="@drawable/ic_control_point_black_24dp"
                android:paddingBottom="10dp"
                android:paddingLeft="40dp"
                android:paddingTop="10dp"
                android:textAppearance="@style/text_button"
                app:layout_columnWeight="1" />

            <TextView
                android:id="@+id/food_detail_description_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_assignment_black_24dp"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/demo_description"
                android:textSize="18sp"
                app:layout_columnSpan="2" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="#D7CCC8"
                app:layout_columnSpan="2" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:padding="16dp"
                android:text="@string/details"
                android:textSize="14sp"
                app:layout_columnSpan="2" />

            <TextView
                android:id="@+id/food_detail_details_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@android:color/white"
                android:padding="16dp"
                android:text="@string/details"
                android:textSize="14sp"
                app:layout_columnSpan="2" />

        </androidx.gridlayout.widget.GridLayout>
        <FrameLayout
            android:id="@+id/common_details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_columnSpan="2" />
    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_detail_button_enquiry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#0186D5"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/buy"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/product_detail_button_booknow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/orange"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/addToCart"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

</FrameLayout>
