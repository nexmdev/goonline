<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@color/textwhite"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/cart_image"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/electrician_photo" />

    <TextView
        android:id="@+id/cart_productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Dosa"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/cart_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView57"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="₹."
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/cart_amount"
        app:layout_constraintTop_toTopOf="@+id/cart_amount" />

    <TextView
        android:id="@+id/cart_sellerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Nehal Sweet Mart , Vasant Nagar Ghatanji"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/textView57"
        app:layout_constraintStart_toEndOf="@+id/cart_image"
        app:layout_constraintTop_toBottomOf="@+id/cart_productName" />

    <TextView
        android:id="@+id/cart_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Rs. 25 / plate"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/cart_image"
        app:layout_constraintTop_toBottomOf="@+id/cart_sellerName" />

    <TextView
        android:id="@+id/textView45"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:alpha="0.7"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/cart_amount"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/cart_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="50"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cart_productName" />

    <TextView
        android:id="@+id/cart_item_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="60"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="₹."
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/cart_item_total"
        app:layout_constraintTop_toTopOf="@+id/cart_item_total" />

    <TextView
        android:id="@+id/cart_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="12"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/cart_quantity_substract"
        app:layout_constraintStart_toEndOf="@+id/cart_quantity_substract"
        app:layout_constraintTop_toTopOf="@+id/cart_quantity_substract" />

    <TextView
        android:id="@+id/textView62"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Total"
        app:layout_constraintEnd_toStartOf="@+id/textView64"
        app:layout_constraintTop_toTopOf="@+id/cart_item_total" />

    <TextView
        android:id="@+id/cart_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Delivery   ₹.10"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/cart_item_total"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/cart_quantity_add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:background="?attr/selectableItemBackground"
        android:scaleType="center"
        app:layout_constraintStart_toEndOf="@+id/cart_quantity"
        app:layout_constraintTop_toTopOf="@+id/cart_quantity_substract"
        app:srcCompat="@drawable/ic_control_point_black_24dp" />

    <ImageView
        android:id="@+id/cart_quantity_substract"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="?attr/selectableItemBackground"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cart_image"
        app:srcCompat="@drawable/ic_remove_circle_outline_black_24dp" />

    <ImageView
        android:id="@+id/cart_item_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="@+id/cart_quantity_add"
        app:layout_constraintStart_toEndOf="@+id/cart_quantity_add"
        app:layout_constraintTop_toTopOf="@+id/cart_quantity_add"
        app:srcCompat="@drawable/ic_baseline_delete_24" />

</androidx.constraintlayout.widget.ConstraintLayout>