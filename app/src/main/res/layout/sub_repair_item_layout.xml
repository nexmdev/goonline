<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/sub_repair_imageView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/sample_profile_pic" />

            <TextView
                android:id="@+id/sub_repair_nameView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/sub_repair_imageView"
                android:layout_toRightOf="@+id/sub_repair_imageView"
                android:text="Suchita Mahalley"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sub_repair_workView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sub_repair_nameView"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/sub_repair_imageView"
                android:layout_toRightOf="@+id/sub_repair_imageView"
                android:text="Electrician - Pipe Fitting - Repair"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/sub_repair_yearsView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sub_repair_workView"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/sub_repair_imageView"
                android:layout_toRightOf="@+id/sub_repair_imageView"
                android:text="Working since 2008" />

            <RatingBar
                android:id="@+id/sub_repair_ratingbarView"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/sub_repair_yearsView"
                android:layout_alignStart="@+id/sub_repair_yearsView"
                android:layout_below="@+id/sub_repair_yearsView"
                android:layout_marginTop="3dp"
                android:numStars="5"
                android:rating="3.6"
                android:stepSize="0.1" />

            <TextView
                android:id="@+id/sub_repair_ratingView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/sub_repair_ratingbarView"
                android:layout_marginLeft="3dp"
                android:layout_toEndOf="@+id/sub_repair_ratingbarView"
                android:layout_toRightOf="@+id/sub_repair_ratingbarView"
                android:text="3.6 ( 30 users )"
                android:textColor="@color/green" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>